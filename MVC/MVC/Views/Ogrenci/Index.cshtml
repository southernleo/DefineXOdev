@model MVC.Models.Ogrencim


@{
    ViewData["Title"] = "Öğrenci Kaydı";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h2 class="text-center mb-4">Öğrenci Kaydı</h2>

                <form method="post" asp-action="Index">
                    <div class="mb-3">
                        <label for="Adi" class="form-label">Adı</label>
                        <input type="text" id="Adi" name="Adi" class="form-control" value="@Model.Adi" />
                        <span asp-validation-for="Adi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Soyadi" class="form-label">Soyadı</label>
                        <input type="text" id="Soyadi" name="Soyadi" class="form-control" value="@Model.Soyadi" />
                        <span asp-validation-for="Soyadi" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="Bolum" class="form-label">Bölüm</label>
                        <input type="text" id="Bolum" name="Bolum" class="form-control" value="@Model.Bolum" />
                        <span asp-validation-for="Bolum" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Gönder</button>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info mt-3">
                        @ViewBag.Message
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS ve gerekli bağımlılıkları ekle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
